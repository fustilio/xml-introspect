{
  "name": "xml-introspect",
  "version": "0.4.0",
  "license": "MIT",
  "author": "fustilio",
  "type": "module",
  "description": "Analyze large XML files and generate representative samples with identical structure.",
  "keywords": [
    "xml",
    "xsd",
    "introspect",
    "analysis",
    "sampling",
    "wordnet",
    "lmf",
    "cli",
    "typescript",
    "data-processing"
  ],
  "scripts": {
    "test": "pnpm test:node && pnpm test:browser && pnpm test:cli",
    "test:node": "vitest run --config vitest.node.config.ts --reporter=verbose",
    "test:browser": "vitest run --config vitest.browser.config.ts --reporter=verbose",
    "test:cli": "vitest run --config vitest.cli.config.ts --reporter=verbose",
    "test:watch": "vitest --reporter=verbose",
    "test:watch:node": "vitest --config vitest.node.config.ts --reporter=verbose",
    "test:watch:browser": "vitest --config vitest.browser.config.ts --reporter=verbose",
    "test:watch:cli": "vitest --config vitest.cli.config.ts --reporter=verbose",
    "test:coverage": "vitest run --coverage --reporter=verbose",
    "test:coverage:node": "vitest run --config vitest.node.config.ts --coverage --reporter=verbose",
    "test:coverage:browser": "vitest run --config vitest.browser.config.ts --coverage --reporter=verbose",
    "test:coverage:cli": "vitest run --config vitest.cli.config.ts --coverage --reporter=verbose",
    "test:ui": "vitest --ui",
    "test:schema": "vitest run test/schema-consistency.test.ts --reporter=verbose",
    "bench": "vitest bench --run bench/xml-introspect.bench.ts",
    "build": "rimraf dist && pnpm build:node && pnpm build:browser && pnpm build:cdn",
    "build:node": "vite build",
    "build:browser": "vite build --config vite.browser.config.ts",
    "build:cdn": "vite build --config vite.cdn.config.ts",
    "dev": "vite build --watch",
    "cli": "node dist/cli.js",
    "demo:faker": "node scripts/faker-demo.js",
    "demo:schema": "node scripts/schema-consistency-demo.js",
    "demo:cdn": "pnpm build:cdn && echo 'CDN demo available at: http://localhost:8080/examples/cdn-usage.html' && python -m http.server 8080 --directory . --bind 127.0.0.1",
    "test:cli:one": "pnpm cli schema ./data/input/omw-fr.xml ./data/output/test.xsd",
    "test:cli:two": "tsx src/cli/index.ts schema ./data/input/omw-fr.xml ./data/output/test.xsd"
  },
  "exports": {
    ".": {
      "default": "./dist/index.js"
    },
    "./browser": {
      "default": "./dist/browser.js"
    },
    "./cdn": {
      "umd": "./dist/xml-introspect.umd.js",
      "iife": "./dist/xml-introspect.iife.js",
      "default": "./dist/xml-introspect.umd.js"
    },
    "./index.js": "./dist/xml-introspect.umd.js"
  },
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "@types/inquirer": "^9.0.9",
    "@fustilio/data-loader": "workspace:*",
    "commander": "^14.0.0",
    "deep-equal": "^2.2.3",
    "inquirer": "^12.9.4",
    "sax": "^1.4.1",
    "unist-util-filter": "^5.0.1",
    "unist-util-find": "^3.0.0",
    "unist-util-map": "^4.0.0",
    "unist-util-parents": "^3.0.0",
    "unist-util-size": "^4.0.0",
    "unist-util-visit": "^5.0.0",
    "xast-util-from-xml": "^4.0.0",
    "xast-util-to-xml": "^4.0.0",
    "xastscript": "^4.0.0",
    "xmllint-wasm": "^5.0.0"
  },
  "devDependencies": {
    "@types/deep-equal": "^1.0.4",
    "@types/node": "^20.0.0",
    "@types/sax": "^1.2.7",
    "@types/xast": "^2.0.4",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "execa": "^9.6.0",
    "jsdom": "^26.1.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.0.0",
    "vite": "catalog:",
    "vitest": "catalog:"
  },
  "bin": {
    "xml-introspect": "./dist/cli.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "index.js"
  ]
}
