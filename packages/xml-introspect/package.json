{
  "name": "xml-introspect",
  "version": "0.1.0",
  "license": "MIT",
  "author": "fustilio",
  "type": "module",
  "scripts": {
    "test": "vitest run --reporter=verbose",
    "test:watch": "vitest --reporter=verbose",
    "test:coverage": "vitest run --coverage --reporter=verbose",
    "test:ui": "vitest --ui",
    "test:schema": "vitest run test/schema-consistency.test.ts --reporter=verbose",
    "bench": "vitest bench --run bench/xml-introspect.bench.ts",
    "build": "rimraf dist && pnpm build:node && pnpm build:browser && pnpm build:cli",
    "build:node": "vite build --config vite.node.config.ts",
    "build:browser": "vite build --config vite.browser.config.ts",
    "build:cli": "vite build --config vite.cli.config.ts",
    "dev": "vite build --watch",
    "cli": "node dist/cli.js",
    "demo:faker": "node scripts/faker-demo.js",
    "demo:schema": "node scripts/schema-consistency-demo.js",
    "test:cli:one": "pnpm cli schema ./data/input/omw-fr.xml ./data/output/test.xsd",
    "test:cli:two": "tsx src/cli.ts schema ./data/input/omw-fr.xml ./data/output/test.xsd"
  },
  "exports": {
    ".": {
      "default": "./dist/index.js"
    },
    "./browser": {
      "default": "./dist/browser.js"
    }
  },
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "@xml-introspect/data-loader": "workspace:*",
    "deep-equal": "^2.2.3",
    "sax": "^1.4.1",
    "unist-util-filter": "^5.0.1",
    "unist-util-find": "^3.0.0",
    "unist-util-map": "^4.0.0",
    "unist-util-parents": "^3.0.0",
    "unist-util-size": "^4.0.0",
    "unist-util-visit": "^5.0.0",
    "xast-util-from-xml": "^4.0.0",
    "xast-util-to-xml": "^4.0.0",
    "xastscript": "^4.0.0",
    "xmllint-wasm": "^5.0.0"
  },
  "devDependencies": {
    "@types/deep-equal": "^1.0.4",
    "@types/node": "^20.0.0",
    "@types/sax": "^1.2.7",
    "@types/xast": "^2.0.4",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "execa": "^9.6.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.0.0",
    "vite": "catalog:",
    "vitest": "catalog:"
  },
  "bin": {
    "xml-introspect": "./dist/cli.js"
  }
}
